<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tạo người dùng mới</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container mt-5">
        <div class="card">
            <form action="/assistant-post-crud" method="post">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Tạo trợ giảng mới</h4>
                </div>
                <div class="card-body">
                    <form>
                        <!-- Họ và tên -->
                        <div class="form-group">
                            <label for="fullName">Họ và tên</label>
                            <input type="text" class="form-control" id="fullName" placeholder="Nhập họ và tên"
                                name="fullName" required>
                        </div>

                        <!-- Email -->
                        <div class="form-group">
                            <label for="inputEmail">Email</label>
                            <input type="email" class="form-control" id="inputEmail" placeholder="Nhập email"
                                name="email" required>
                        </div>

                        <!-- Số điện thoại -->
                        <div class="form-group">
                            <label for="phoneNumber">Số điện thoại</label>
                            <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber"
                                placeholder="Nhập số điện thoại" required>
                        </div>

                        <!-- Mật khẩu -->
                        <div class="form-group">
                            <label for="inputPassword">Mật khẩu</label>
                            <input type="password" class="form-control" id="inputPassword" name="password"
                                placeholder="Nhập mật khẩu" required>
                        </div>

                        <!-- Nút đăng ký -->
                        <button type="submit" class="btn btn-primary btn-block">Tạo trợ giảng mới</button>
                    </form>
                </div>
            </form>
        </div>
    </div>
</body>

</html>