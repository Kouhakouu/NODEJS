<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Schedule</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container mt-5">
        <div class="header">
            <h1 class="title">Tạo Ca Học Mới</h1>
        </div>

        <!-- Form để tạo ca học -->
        <div class="form-container">
            <form action="/schedule-post-crud" method="post" class="form">
                <!-- Ngày học -->
                <div class="form-group">
                    <label for="study_day" class="form-label">Ngày học</label>
                    <select id="study_day" name="study_day" class="form-input" required>
                        <option value="" disabled selected>-- Chọn ngày học --</option>
                        <option value="Monday">Thứ Hai</option>
                        <option value="Tuesday">Thứ Ba</option>
                        <option value="Wednesday">Thứ Tư</option>
                        <option value="Thursday">Thứ Năm</option>
                        <option value="Friday">Thứ Sáu</option>
                        <option value="Saturday">Thứ Bảy</option>
                        <option value="Sunday">Chủ Nhật</option>
                    </select>
                </div>

                <!-- Thời gian bắt đầu -->
                <div class="form-group">
                    <label for="start_time" class="form-label">Thời gian bắt đầu</label>
                    <input type="time" id="start_time" name="start_time" class="form-input" required>
                </div>

                <!-- Thời gian kết thúc -->
                <div class="form-group">
                    <label for="end_time" class="form-label">Thời gian kết thúc</label>
                    <input type="time" id="end_time" name="end_time" class="form-input" required>
                </div>

                <!-- Nút Submit -->
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Tạo Ca Học</button>
                </div>
            </form>
        </div>
    </div>
</body>

</html>